{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "20.1.0",

  "compilerOptions": {
    "lib": ["ES2023"],
    "module": "nodenext",
    "target": "ES2023",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "paths": {
      "@/*": ["./src/*"],
      "ROOT/*": ["./*"]
    }
  },
  "include": ["src/**/*", "seed.ts", "seed/**/*", "clear-database.ts"],
  "exclude": ["node_modules", "prisma/generated"]
}